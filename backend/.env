# Server
PORT=4000
BASE_URL=http://localhost:4000

# Frontend (where you'll redirect after auth)
FRONTEND_URL=http://localhost:5173

# JWT
JWT_SECRET=replace_with_a_strong_secret
JWT_EXPIRES_IN=1h

# Google
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK=/auth/google/callback

# GitHub
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK=/auth/github/callback

# Microsoft / Outlook
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
MICROSOFT_CALLBACK=/auth/microsoft/callback

# Apple (optional)
APPLE_CLIENT_ID=com.your.app
APPLE_TEAM_ID=YOUR_TEAM_ID
APPLE_KEY_ID=KEY_ID_FROM_DEVELOPER_PORTAL
APPLE_PRIVATE_KEY_PATH=./AuthKey_KEYID.p8
APPLE_CALLBACK=/auth/apple/callback
